{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/listingUpdate.schema.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 25
    },
    "description": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "minLength": 1,
      "maxLength": 25
    },
    "price": {
      "type": "integer",
      "minimum": 0
    },
    "image": {
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": false,
  "required": []
}
